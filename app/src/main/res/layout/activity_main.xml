<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oleg.phone1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <Button
                android:id="@+id/call1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="c1"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:textSize="60sp" />

            <Button
                android:id="@+id/call3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="C3"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:textSize="60sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/call2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="0.5"
                android:text="C2"
                android:textSize="60sp" />

            <Button
                android:id="@+id/call4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="C4"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:textSize="60sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/help_message"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/sms_frame"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sms1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton_green"
                android:text="1"
                android:textSize="40sp" />

            <Button
                android:id="@+id/sms2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton_orange"
                android:text="2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/sms3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton_red"
                android:text="SOS"
                android:textSize="60sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
